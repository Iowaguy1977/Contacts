@using Microsoft.Data.SqlClient
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer

<div class="LoginB">

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p style="color:red">@errorMessage</p>
    }

    @if (loggedIn)
    {
        <p>Login successful! Redirecting...</p>
    }

    <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="Username mb-2">
            <label for="Username">Username:</label>
            <InputText @bind-Value="loginModel.Username"
                       class="form-control"
                       id="Username" />
            <ValidationMessage For="@(() => loginModel.Username)" />
        </div>

        <div class="Password mb-2">
            <label for="Password">Password:</label>
            <InputText @bind-Value="loginModel.Password"
                       type="password"
                       class="form-control"
                       id="Password" />
            <ValidationMessage For="@(() => loginModel.Password)" />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </EditForm>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private bool loggedIn = false;

    [Inject] ILogger<LoginForm> Logger { get; set; } = default!;
    [Inject] NavigationManager NavManager { get; set; } = default!;

    [Parameter] public string ConnectionString { get; set; } = string.Empty;

    private async Task HandleLogin()
    {
        if (string.IsNullOrEmpty(ConnectionString))
        {
            errorMessage = "Connection string is not set.";
            return;
        }

        int result;
        try
        {
            using var conn = new SqlConnection(ConnectionString);
            await conn.OpenAsync();

            using var cmd = new SqlCommand(
                "SELECT COUNT(*) FROM Login " +
                "WHERE RTRIM(LTRIM(UserName)) = @Username " +
                "AND RTRIM(LTRIM(PassWord)) = @Password", conn);

            cmd.Parameters.AddWithValue("@Username", loginModel.Username.Trim());
            cmd.Parameters.AddWithValue("@Password", loginModel.Password.Trim());

            result = Convert.ToInt32(await cmd.ExecuteScalarAsync());
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Login database error");
            errorMessage = "A database error occurred. Please try again.";
            return;
        }

        if (result > 0)
        {
            errorMessage = "";
            loggedIn = true;
            StateHasChanged();

            // Direct navigation — works reliably in Blazor Server
            NavManager.NavigateTo("/contacts", forceLoad: true);
        }
        else
        {
            errorMessage = "Invalid username or password.";
        }
    }

    private class LoginModel
    {
        [Required(ErrorMessage = "Username is required.")]
        public string Username { get; set; } = "";

        [Required(ErrorMessage = "Password is required.")]
        public string Password { get; set; } = "";
    }
}

