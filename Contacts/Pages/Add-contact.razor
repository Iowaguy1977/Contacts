@page "/contacts"
@page "/contacts/{Id:int}"
@using Contacts.Models
@using Contacts.Services
@inject IContactService ContactService
@rendermode InteractiveServer

<ContactForm Contact="contact"
             OnSaved="HandleSaved"
             OnDeleted="HandleDeleted" />

<hr />

<h4>Existing Contacts</h4>

@if (contacts.Count == 0)
{
    <p>No contacts yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in contacts)
            {
                <tr>
                    <td>@c.FirstName @c.LastName</td>
                    <td>@c.EmailAddress</td>
                    <td>@c.PhoneNumber</td>
                    <td>
                        <button class="btn btn-sm btn-warning me-1"
                                @onclick="() => EditContact(c.Id)">
                            Edit
                        </button>
                        <button class="btn btn-sm btn-danger"
                                @onclick="() => DeleteContact(c.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private List<Contact> contacts = new();
    private Contact contact = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadContacts();

        if (Id != 0)
            await LoadContact(Id);
    }

    private async Task LoadContacts()
    {
        contacts = await ContactService.GetAllAsync();
    }

    private async Task LoadContact(int id)
    {
        contact = await ContactService.GetByIdAsync(id) ?? new Contact();
    }

    private async Task EditContact(int id)
    {
        await LoadContact(id);
    }

    private async Task DeleteContact(int id)
    {
        await ContactService.DeleteAsync(id);

        if (contact.Id == id)
            contact = new Contact();

        await LoadContacts();
    }

    private async Task HandleSaved()
    {
        contact = new Contact();
        await LoadContacts();
    }

    private async Task HandleDeleted()
    {
        contact = new Contact();
        await LoadContacts();
    }
}
